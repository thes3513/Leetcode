/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    TreeNode* sortedArrayToBST(vector<int>& nums) {
        return getTree(nums.begin(), nums.end());
    }
    TreeNode* getTree(vector<int>::iterator start, vector<int>::iterator end)
    {
        if(start!=end)
        {
            int mid = (end - start)/2;
            TreeNode* root = new TreeNode(*(start + mid));
            root->left = getTree(start, start + mid);
            root->right = getTree(start + mid + 1, end);
            return root;
        }
    return NULL;
    }
};
