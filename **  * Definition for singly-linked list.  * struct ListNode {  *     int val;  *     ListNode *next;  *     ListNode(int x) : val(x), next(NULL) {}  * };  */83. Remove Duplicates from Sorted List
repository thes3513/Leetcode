/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* deleteDuplicates(ListNode* head) {
        ListNode *p,*q;
        if(head==NULL) return NULL;
        if(head->next==NULL) return head;
        p = head;
        q = head->next;
        while(q!=NULL)
        {
            if(p->val==q->val)
            {
                p->next=q->next;
                q=p->next;
            }
            else
            {
                p=q;
                q=q->next;
            }
        }
    return head;
    }
};
